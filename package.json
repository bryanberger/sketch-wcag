{
  "name": "sketch-wcag",
  "version": "0.1.0",
  "engines": {
    "sketch": ">=3.0"
  },
  "skpm": {
    "name": "sketch-wcag",
    "manifest": "src/manifest.json",
    "main": "sketch-wcag.sketchplugin"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bryanberger/sketch-wcag.git"
  },
  "scripts": {
    "build": "skpm-build",
    "watch": "skpm-build --watch",
    "start": "skpm-build --watch --run",
    "postinstall": "npm run build && skpm-link && mkdir -p sketch-wcag.sketchplugin/Contents/Resources && cp src/styles.css sketch-wcag.sketchplugin/Contents/Resources"
  },
  "devDependencies": {
    "@skpm/builder": "^0.2.0"
  },
  "dependencies": {
    "colorable": "^1.0.5"
  }
}
